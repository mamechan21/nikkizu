<p id="notice"><%= notice %></p>

<h1>Nikkis</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Article</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nikkis.each do |nikki| %>
      <tr>
        <td><%= nikki.user %></td>
        <td><%= nikki.article %></td>
        <td><%= nikki.category %></td>
        <td><%= link_to 'Show', nikki %></td>
        <td><%= link_to 'Edit', edit_nikki_path(nikki) %></td>
        <td><%= link_to 'Destroy', nikki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

